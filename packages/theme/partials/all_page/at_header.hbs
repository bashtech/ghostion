<div id="at_header">
    <div class="row">
        <div class="medium-4 columns">
            <div class="at_logo_container">
                {{#if @blog.logo}}
                    <a href="{{@blog.url}}"><img class="at_logo_img" src="{{@blog.logo}}" alt="{{@blog.title}}" />
                    {{else}}
                        <a href="{{@blog.url}}">
                {{/if}}
                    <span class="at_logo_text">{{@blog.title}}</span></a>
            </div>
        </div>
        <div class="medium-4 columns text-right hide-for-small-only">
            <div class="at_icon_menu">
                <a class="at_icon_menu_item" href="{{@blog.url}}/about" data-tooltip class="has-tip" title="About"><span class="fa fa-user"></span></a>
                <a class="at_icon_menu_item" href="http://www.linkedin.com/in/marcomornati" data-tooltip class="has-tip" title="LinkedIn"><span class="fa fa-linkedin"></span></a>
                <a class="at_icon_menu_item" href="http://twitter.com/marcomornati" data-tooltip class="has-tip" title="Twitter"><span class="fa fa-twitter"></span></a>
                <a class="at_icon_menu_item" href="http://www.mornati.net" data-tooltip class="has-tip" title="Website"><span class="fa fa-file"></span></a>
                <a class="at_icon_menu_item" href="{{@blog.url}}/epomodoro" data-tooltip class="has-tip" title="ePomodoro"><span class="fa fa-bullseye"></span></a>
            </div>
        </div>
        <div class="medium-4 columns">
            {{> widgets/at_search }}
        </div>
    </div>
</div>
